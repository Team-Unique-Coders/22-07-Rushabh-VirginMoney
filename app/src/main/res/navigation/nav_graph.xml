<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/peopleFragment">
    <fragment
        android:id="@+id/peopleFragment"
        android:name="com.example.peoplerooms.ui.people.PeopleFragment"
        android:label="People" >
        <action
            android:id="@+id/action_peopleFragment_to_userDetailsFragment"
            app:destination="@id/userDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/roomFragment"
        android:name="com.example.peoplerooms.ui.room.RoomFragment"
        android:label="Room" />
    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="com.example.peoplerooms.ui.userdetails.UserDetailsFragment"
        android:label="fragment_user_details"
        tools:layout="@layout/fragment_user_details" >

    <argument
        android:name="item"
        app:argType="com.example.peoplerooms.data.model.people.PeopleItemModel" />
    </fragment>

</navigation>