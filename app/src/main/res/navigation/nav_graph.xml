<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.project.peoplerooms.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_peopleFragment"
            app:destination="@id/peopleFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.project.peoplerooms.ui.signup.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/peopleFragment"
        android:name="com.project.peoplerooms.ui.people.PeopleFragment"
        android:label="People" >
        <action
            android:id="@+id/action_peopleFragment_to_userDetailsFragment"
            app:destination="@id/userDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/roomFragment"
        android:name="com.project.peoplerooms.ui.room.RoomFragment"
        android:label="Room" />
    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="com.project.peoplerooms.ui.userdetails.UserDetailsFragment"
        android:label="fragment_user_details"
        tools:layout="@layout/fragment_user_details" >

    <argument
        android:name="item"
        app:argType="com.project.peoplerooms.data.model.people.PeopleItemModel" />
    </fragment>


</navigation>